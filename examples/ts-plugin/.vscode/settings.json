{
  // CodeGraphy Settings
  "codegraphy.maxFiles": 100,
  "codegraphy.include": ["**/*"],
  "codegraphy.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**"
  ],
  "codegraphy.respectGitignore": true,
  "codegraphy.showOrphans": true,
  "codegraphy.bidirectionalEdges": "separate",
  "codegraphy.favorites": ["src/index.ts"],
  "codegraphy.nodeSizeBy": "file-size",
  "codegraphy.plugins": [],
  // Custom file colors (overrides plugin/generated colors)
  "codegraphy.fileColors": {
    // Example: ".myext": "#FF5733"
  },
// Physics simulation settings (adjust via gear icon in graph view)
  "codegraphy.physics.gravitationalConstant": -80,
  "codegraphy.physics.springLength": 140,
  "codegraphy.physics.springConstant": 0.1,
  "codegraphy.physics.damping": 0.35,
  "codegraphy.physics.centralGravity": 0.02,

  // TypeScript settings for the fixture
  "typescript.tsdk": "node_modules/typescript/lib"
}
