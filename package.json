{
  "name": "codegraphy",
  "displayName": "CodeGraphy",
  "description": "Visualize your codebase as an interactive 2D force graph",
  "version": "0.1.0",
  "publisher": "joesobo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "graph",
    "visualization",
    "dependencies",
    "imports",
    "codebase"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codegraphy.open",
        "title": "CodeGraphy: Open"
      },
      {
        "command": "codegraphy.fitView",
        "title": "CodeGraphy: Fit All Nodes in View"
      },
      {
        "command": "codegraphy.zoomIn",
        "title": "CodeGraphy: Zoom In"
      },
      {
        "command": "codegraphy.zoomOut",
        "title": "CodeGraphy: Zoom Out"
      }
    ],
    "keybindings": [
      {
        "command": "codegraphy.fitView",
        "key": "0",
        "when": "codegraphy.graphFocused"
      },
      {
        "command": "codegraphy.zoomIn",
        "key": "=",
        "when": "codegraphy.graphFocused"
      },
      {
        "command": "codegraphy.zoomIn",
        "key": "shift+=",
        "when": "codegraphy.graphFocused"
      },
      {
        "command": "codegraphy.zoomOut",
        "key": "-",
        "when": "codegraphy.graphFocused"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codegraphy",
          "title": "CodeGraphy",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "codegraphy": [
        {
          "type": "webview",
          "id": "codegraphy.graphView",
          "name": "Graph"
        }
      ]
    },
    "configuration": {
      "title": "CodeGraphy",
      "properties": {
        "codegraphy.maxFiles": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to analyze. Shows a warning if exceeded."
        },
        "codegraphy.include": {
          "type": "array",
          "items": "string",
          "default": [
            "**/*"
          ],
          "description": "Glob patterns for files to include in analysis."
        },
        "codegraphy.exclude": {
          "type": "array",
          "items": "string",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/out/**",
            "**/.git/**",
            "**/coverage/**",
            "**/*.min.js",
            "**/*.bundle.js",
            "**/*.map"
          ],
          "description": "Glob patterns for files to exclude from analysis."
        },
        "codegraphy.respectGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Also exclude files matched by .gitignore."
        },
        "codegraphy.showOrphans": {
          "type": "boolean",
          "default": true,
          "description": "Show files that have no connections (no imports and not imported)."
        },
        "codegraphy.plugins": {
          "type": "array",
          "items": "string",
          "default": [],
          "description": "List of CodeGraphy plugin extension names to enable (e.g., 'codegraphy-rust')."
        },
        "codegraphy.fileColors": {
          "type": "object",
          "default": {},
          "description": "Custom colors for file extensions. Maps extension (e.g., '.ts') to hex color (e.g., '#93C5FD'). Overrides plugin and generated colors.",
          "additionalProperties": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "vite build --watch",
    "dev": "npm run watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.0.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "distinct-colors": "^3.0.0",
    "ignore": "^7.0.5",
    "minimatch": "^10.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vis-data": "^8.0.3",
    "vis-network": "^10.0.2"
  }
}
